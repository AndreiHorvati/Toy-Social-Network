<VBox fx:id="wrapper" alignment="CENTER" stylesheets="@css/login-view.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.toysocialnetworkgui.HelloController">
    <HBox fx:id="tabs" alignment="BOTTOM_RIGHT">
        <Label fx:id="loginLabel" onMouseClicked="#onLoginLabelClick" styleClass="" text="Login" textFill="white" />
        <Label fx:id="registerLabel" onMouseClicked="#onRegisterLabelClick" text="Register" textFill="#9a9a9a">
         <font>
            <Font name="YuKyokasho Yoko Medium" size="14.0" />
         </font>
         <HBox.margin>
            <Insets right="100.0" />
         </HBox.margin></Label>
      <VBox.margin>
         <Insets top="-20.0" />
      </VBox.margin>
    </HBox>

    <VBox fx:id="registerForm" alignment="CENTER" fillWidth="false" spacing="5.0" visible="false">
        <Label text="Username" textFill="#776e90">
            <VBox.margin>
                <Insets right="200.0" top="15.0" />
            </VBox.margin></Label>
        <TextField fx:id="usernameTextFieldRegister" prefWidth="260.0">
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding></TextField>

        <Label text="First Name" textFill="#776e90">
            <VBox.margin>
                <Insets right="200.0" top="15.0" />
            </VBox.margin></Label>
        <TextField fx:id="firstNameTextFieldRegister" prefWidth="260.0">
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding></TextField>

        <Label text="Last Name" textFill="#776e90">
            <VBox.margin>
                <Insets right="200.0" top="15.0" />
            </VBox.margin></Label>
        <TextField fx:id="lastNameTextFieldRegister" prefWidth="260.0">
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
            </padding></TextField>

        <Label text="Password" textFill="#776e90">
            <VBox.margin>
                <Insets right="200.0" top="10.0" />
            </VBox.margin></Label>
        <PasswordField fx:id="passwordTextFieldRegister" prefWidth="260.0">
            <padding>
                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
            </padding></PasswordField>

        <Button prefWidth="260.0" text="Register" textFill="WHITE">
            <VBox.margin>
                <Insets top="18.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="78.0" right="78.0" top="6.0" />
            </padding>
            <font>
                <Font size="14.0" />
            </font></Button>
    </VBox>

    <VBox fx:id="loginForm" alignment="CENTER" fillWidth="false" spacing="5.0">
        <Label text="Username" textFill="#776e90">
         <VBox.margin>
            <Insets right="200.0" top="15.0" />
         </VBox.margin></Label>
        <TextField fx:id="usernameTextField" prefWidth="260.0">
         <padding>
            <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
         </padding></TextField>

        <Label text="Password" textFill="#776e90">
         <VBox.margin>
            <Insets right="200.0" top="10.0" />
         </VBox.margin></Label>
        <PasswordField fx:id="passwordTextField" prefWidth="260.0">
         <padding>
            <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
         </padding></PasswordField>

        <Button prefWidth="260.0" text="Login" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="60.0" top="18.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="78.0" right="78.0" top="6.0" />
         </padding>
         <font>
            <Font name="YuKyokasho Yoko Medium" size="14.0" />
         </font></Button>
      <VBox.margin>
         <Insets top="-320.0" />
      </VBox.margin>
    </VBox>
</VBox>
